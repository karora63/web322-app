<div class="row">
    <div class="col-md-12">
        <h2>Store</h2>
        <hr />
        
        <!-- Display an error message if no items are found -->
        {{#unless items}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{else}}
            <!-- Render items in a table -->
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item ID</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Published</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.title}}</td>
                                <td>{{this.category}}</td>
                                <td>{{this.price}}</td>
                                <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{/unless}}
    </div>
</div>
